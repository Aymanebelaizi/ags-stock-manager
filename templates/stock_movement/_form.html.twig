{{ form_start(form) }}

    <div class="card shadow-sm p-4">
        
        {# Row 1: Type & Quantity #}
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_label(form.type, 'Type de Mouvement', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-select form-select-lg'}}) }}
                <div class="form-text text-muted">
                    Sélectionnez "Entrée" pour ajouter du stock, "Sortie" pour en retirer.
                </div>
            </div>
            
            <div class="col-md-6">
                {{ form_label(form.quantity, 'Quantité', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.quantity, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: 10'}}) }}
            </div>
        </div>

        {# Row 2: Product #}
        <div class="mb-4">
            {{ form_label(form.product, 'Produit Concerné', {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.product, {'attr': {'class': 'form-select'}}) }}
        </div>

        {# Action Buttons #}
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="{{ path('app_stock_movement_index') }}" class="btn btn-outline-secondary me-md-2">Annuler</a>
            <button class="btn btn-primary btn-lg px-5">{{ button_label|default('Valider le Mouvement') }}</button>
        </div>

    </div>

{{ form_end(form) }}