{% extends 'base.html.twig' %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="fw-bold h2 mb-1">Stock Movements</h1>
            <p class="text-muted small">Historique complet des entrées et sorties de stock</p>
        </div>
        {# BOUTON NOUVEAU #}
        <a href="{{ path('admin_movement_new') }}" class="btn btn-primary px-4 py-2 fw-bold shadow-sm" style="background: #1a73e8 !important;">
            <i class="fas fa-plus me-2"></i> Nouveau Mouvement
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <table class="table align-middle mb-0">
            <thead class="bg-light text-muted small text-uppercase">
                <tr>
                    <th class="ps-4 py-3">Date & Heure</th>
                    <th>Produit</th>
                    <th>Type</th>
                    <th>Quantité</th>
                    <th>Note</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for movement in movements %}
                <tr>
                    <td class="ps-4 small text-muted">{{ movement.createdAt|date('d/m/Y H:i') }}</td>
                    <td>
                        <div class="fw-bold text-primary">{{ movement.product.name }}</div>
                        <small class="text-muted">REF: {{ movement.product.reference|default('N/A') }}</small>
                    </td>
                    <td>
                        <span class="badge {{ movement.type in ['IN', 'Entrée'] ? 'bg-success' : 'bg-danger' }} bg-opacity-10 {{ movement.type in ['IN', 'Entrée'] ? 'text-success' : 'text-danger' }} rounded-pill px-3">
                            {{ movement.type in ['IN', 'Entrée'] ? 'ENTRÉE' : 'SORTIE' }}
                        </span>
                    </td>
                    <td class="fw-bold">{{ (movement.type in ['IN', 'Entrée']) ? '+' : '-' }} {{ movement.quantity }}</td>
                    <td class="text-muted small">{{ movement.comment|default('Aucune note') }}</td>
                    <td class="text-end pe-4">
                        <div class="btn-group border rounded-pill overflow-hidden bg-white shadow-sm">
                            <a href="{{ path('admin_movement_show', {id: movement.id}) }}" class="btn btn-sm btn-white border-end"><i class="fas fa-eye text-muted"></i></a>
                            <a href="{{ path('admin_movement_edit', {id: movement.id}) }}" class="btn btn-sm btn-white border-end"><i class="fas fa-edit text-primary"></i></a>
                            <a href="{{ path('admin_movement_delete', {id: movement.id}) }}" class="btn btn-sm btn-white text-danger" onclick="return confirm('Supprimer ce mouvement ?')"><i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}