{# templates/admin/stock_movement/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Stock Movements{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-5 bg-light min-vh-100">
    
    {# Header #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-dark">Stock <span class="text-primary">History</span></h1>
            <p class="text-muted">Track all inventory adjustments (Entries & Exits).</p>
        </div>
        <a href="{{ path('admin_movement_new') }}" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
            <i class="fas fa-plus me-2"></i> Record Movement
        </a>
    </div>

    {# CARTE DU TABLEAU AVEC BORDURE #}
    <div class="card border border-secondary-subtle shadow-sm rounded-4 overflow-hidden bg-white">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-uppercase text-muted small fw-bold">Reference</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold">Product</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold">Type</th>
                            <th class="py-3 text-center text-uppercase text-muted small fw-bold">Quantity</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold">Date</th>
                            <th class="py-3 text-end pe-4 text-uppercase text-muted small fw-bold">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for movement in movements %}
                        <tr class="border-bottom border-light">
                            {# 1. ID #}
                            <td class="ps-4 fw-bold text-muted small">#{{ movement.id }}</td>
                            
                            {# 2. PRODUIT #}
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded p-2 me-3 text-primary">
                                        <i class="fas fa-box"></i>
                                    </div>
                                    <span class="fw-bold text-dark">{{ movement.product.name }}</span>
                                </div>
                            </td>
                            
                            {# 3. TYPE (BADGES) #}
                            <td>
                                {% if movement.type in ['ENTREE', 'IN', 'Entrée'] %}
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill px-3">
                                        <i class="fas fa-arrow-up me-1"></i> IN
                                    </span>
                                {% else %}
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 rounded-pill px-3">
                                        <i class="fas fa-arrow-down me-1"></i> OUT
                                    </span>
                                {% endif %}
                            </td>
                            
                            {# 4. QUANTITÉ #}
                            <td class="text-center">
                                {% if movement.type in ['ENTREE', 'IN', 'Entrée'] %}
                                    <span class="fw-bold text-success">+ {{ movement.quantity }}</span>
                                {% else %}
                                    <span class="fw-bold text-danger">- {{ movement.quantity }}</span>
                                {% endif %}
                            </td>
                            
                            {# 5. DATE #}
                            <td class="text-muted small">
                                {{ movement.createdAt|date('d M Y, H:i') }}
                            </td>
                            
                            {# 6. ACTIONS (Voir, Modifier, Supprimer) #}
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    
                                    {# Bouton VOIR (Gris) #}
                                    <a href="{{ path('admin_movement_show', {'id': movement.id}) }}" class="btn btn-sm btn-light text-muted border rounded-circle" title="Details">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    {# Bouton EDITER (Bleu) #}
                                    <a href="{{ path('admin_movement_edit', {'id': movement.id}) }}" class="btn btn-sm btn-light text-primary border rounded-circle" title="Edit">
                                        <i class="fas fa-pen"></i>
                                    </a>

                                    {# Bouton SUPPRIMER (Rouge) #}
                                    <form method="post" action="{{ path('admin_movement_delete', {'id': movement.id}) }}" onsubmit="return confirm('Are you sure you want to delete this movement permanently?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ movement.id) }}">
                                        <button class="btn btn-sm btn-light text-danger border rounded-circle" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>

                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fas fa-inbox fa-3x mb-3 text-light"></i>
                                <p>No movements recorded yet.</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}