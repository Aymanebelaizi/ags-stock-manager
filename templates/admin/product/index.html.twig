{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="fw-bold h2">Product Inventory</h1>
        <a href="{{ path('admin_product_new') }}" class="btn btn-primary px-4 fw-bold shadow-sm">+ Ajouter produits</a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <table class="table align-middle mb-0">
            <thead class="bg-light text-muted small text-uppercase">
                <tr><th class="ps-4 py-3">Reference</th><th>Name</th><th>Category</th><th>Quantity</th><th class="text-end pe-4">Actions</th></tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td class="ps-4 fw-bold text-muted">{{ product.reference }}</td>
                    <td class="fw-bold">{{ product.name }}</td>
                    <td>{{ product.category.name|default('General') }}</td>
                    {# AMÉLIORATION : LOGIQUE DE BADGE DE STOCK #}
                    <td class="fw-bold">
                        {% if product.quantity <= 5 %}
                            <span class="badge bg-danger bg-opacity-10 text-danger p-2 rounded-3 w-75 shadow-sm" style="border: 1px solid rgba(220, 53, 69, 0.2)">
                                <i class="fas fa-exclamation-triangle me-1"></i> {{ product.quantity }} (Critical)
                            </span>
                        {% elseif product.quantity <= 15 %}
                            <span class="badge bg-warning bg-opacity-10 text-warning p-2 rounded-3 w-75">
                                {{ product.quantity }} (Low)
                            </span>
                        {% else %}
                            <span class="badge bg-success bg-opacity-10 text-success p-2 rounded-3 w-75">
                                {{ product.quantity }} units
                            </span>
                        {% endif %}
                    </td>
                    <td class="text-end pe-4">
                        <div class="btn-group border rounded-pill overflow-hidden shadow-sm">
                            {# Bouton Modifier : Reste un lien car c'est du GET #}
                            <a href="{{ path('admin_product_edit', {id: product.id}) }}" class="btn btn-sm btn-white border-end">
                                <i class="fas fa-edit text-primary"></i>
                            </a>

                            {# Bouton Supprimer : Transformé en formulaire pour envoyer du POST #}
                            <form method="post" action="{{ path('admin_product_delete', {id: product.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce produit ?');" style="display:inline;">
                                {# Le token CSRF est indispensable pour que le contrôleur accepte la suppression #}
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button type="submit" class="btn btn-sm btn-white text-danger border-0">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}