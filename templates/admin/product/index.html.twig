{# templates/admin/product/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Product Inventory{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-5 bg-light min-vh-100">
    
    {# HEADER #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-dark">Product <span class="text-primary">Inventory</span></h1>
            <p class="text-muted">Manage your stock, prices and categories.</p>
        </div>
        {# BOUTON AJOUTER #}
        <a href="{{ path('admin_product_new') }}" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
            <i class="fas fa-plus me-2"></i> Add Product
        </a>
    </div>

    {# TABLEAU #}
    <div class="card border border-secondary-subtle shadow-sm rounded-4 overflow-hidden bg-white">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-uppercase text-muted small fw-bold">Reference</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold">Name</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold">Category</th>
                            {# COLONNE SUPPLIER SUPPRIMÃ‰E #}
                            <th class="py-3 text-center text-uppercase text-muted small fw-bold">Stock Level</th>
                            <th class="py-3 text-end pe-4 text-uppercase text-muted small fw-bold">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr class="border-bottom border-light">
                            {# 1. REFERENCE #}
                            <td class="ps-4 fw-bold text-dark font-monospace">{{ product.reference }}</td>
                            
                            {# 2. NOM #}
                            <td class="fw-bold text-dark">{{ product.name }}</td>
                            
                            {# 3. CATEGORIE #}
                            <td>
                                <span class="badge bg-light text-dark border border-secondary-subtle rounded-pill fw-normal px-3">
                                    {{ product.category.name }}
                                </span>
                            </td>

                            {# 4. STOCK STATUS #}
                            <td class="text-center">
                                {% if product.quantity <= product.alertThreshold %}
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-3 py-2 rounded-pill">
                                        <i class="fas fa-exclamation-triangle me-1"></i> {{ product.quantity }} (Critical)
                                    </span>
                                {% elseif product.quantity <= (product.alertThreshold + 5) %}
                                    <span class="badge bg-warning bg-opacity-10 text-warning border border-warning px-3 py-2 rounded-pill">
                                        {{ product.quantity }} (Low)
                                    </span>
                                {% else %}
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success px-3 py-2 rounded-pill">
                                        {{ product.quantity }} Units
                                    </span>
                                {% endif %}
                            </td>

                            {# 5. ACTIONS #}
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    
                                    {# VIEW #}
                                    <a href="{{ path('admin_product_show', {'id': product.id}) }}" class="btn btn-sm btn-light text-muted border rounded-circle" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    {# EDIT #}
                                    <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-light text-primary border rounded-circle" title="Edit">
                                        <i class="fas fa-pen"></i>
                                    </a>

                                    {# DELETE #}
                                    <form method="post" action="{{ path('admin_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete {{ product.name }}?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                        <button class="btn btn-sm btn-light text-danger border rounded-circle" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>

                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-box-open fa-3x mb-3 text-light"></i>
                                <p>No products found in inventory.</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}