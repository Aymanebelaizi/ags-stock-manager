{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="fw-bold h2 text-dark">Session Manager</h1>
        <button class="btn btn-primary fw-bold shadow-sm px-4 rounded-3">+ Ajouter un utilisateur</button>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <table class="table align-middle mb-0">
            <thead class="bg-light text-muted small text-uppercase">
                <tr><th class="ps-4 py-3">Utilisateur</th><th>RÃ´les</th><th>Email</th><th class="text-end pe-4">Actions</th></tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="border-bottom">
                    <td class="ps-4">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center fw-bold me-3 shadow-sm" style="width: 40px; height: 40px;">
                                {{ user.email|first|upper }}
                            </div>
                            <span class="fw-bold text-dark">{{ user.email|split('@')[0] }}</span>
                        </div>
                    </td>
                    <td>
                        {% for role in user.roles %}
                            <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill small fw-semibold">
                                {{ role|replace({'ROLE_': ''}) }}
                            </span>
                        {% endfor %}
                    </td>
                    <td class="text-muted">{{ user.email }}</td>
                    <td class="text-end pe-4">
                        <div class="btn-group border rounded-pill overflow-hidden shadow-sm">
                            <button class="btn btn-sm btn-white border-end px-3 py-2"><i class="fas fa-edit text-primary"></i></button>
                            <button class="btn btn-sm btn-white px-3 py-2 text-danger"><i class="fas fa-trash"></i></button>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}