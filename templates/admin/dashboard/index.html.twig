{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid px-4 py-4 bg-light min-vh-100">
    <h1 class="fw-bold h3 mb-4">Tableau de bord décisionnel <span class="fs-6 text-muted">v1.1</span></h1>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow rounded-4 p-3 bg-primary text-white">
                <small class="fw-bold opacity-75">PRODUITS TOTAUX</small>
                <h2 class="fw-bold mb-0 mt-2">{{ totalProducts }} articles</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow rounded-4 p-3 bg-danger text-white">
                <small class="fw-bold opacity-75">STOCKS CRITIQUES</small>
                <h2 class="fw-bold mb-0 mt-2">{{ lowStock|length }} articles</h2>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="p-4 border-bottom bg-white"><h6 class="fw-bold mb-0 text-dark">Aide à la Décision</h6></div>
        <div class="p-4">
            {% for item in intelligence %}
                <div class="p-3 bg-light rounded-3 mb-3 d-flex justify-content-between">
                    <span class="small fw-bold">{{ item.name }}</span>
                    <span class="badge bg-{{ item.color }} rounded-pill">{{ item.status }}</span>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}