{# templates/admin/supplier/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Supplier Details{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-5 bg-light min-vh-100">
    
    {# HEADER #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a href="{{ path('admin_supplier_index') }}" class="text-decoration-none text-muted small fw-bold text-uppercase">
                <i class="fas fa-arrow-left me-2"></i> Back to Directory
            </a>
            <h1 class="fw-bold text-dark mt-2">Supplier <span class="text-primary">Details</span></h1>
            <p class="text-muted">View complete profile information.</p>
        </div>
        
        {# BOUTON EDITER #}
        <div>
            <a href="{{ path('admin_supplier_edit', {'id': supplier.id}) }}" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold">
                <i class="fas fa-pen me-2"></i> Edit Supplier
            </a>
        </div>
    </div>

    <div class="row g-4">
        {# COLONNE GAUCHE : Information Principale #}
        <div class="col-lg-8">
            {# Carte avec Bordure #}
            <div class="card border border-secondary-subtle shadow-sm rounded-4 p-5 bg-white h-100">
                
                {# Section Titre #}
                <div class="d-flex align-items-center mb-5 pb-4 border-bottom">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-4 me-4 text-primary">
                        <i class="fas fa-building fa-2x"></i>
                    </div>
                    <div>
                        <h6 class="text-uppercase text-muted small fw-bold mb-1">Company Name</h6>
                        <h3 class="fw-bold text-dark mb-0">{{ supplier.name }}</h3>
                    </div>
                </div>

                <div class="row g-5">
                    {# Colonne Email #}
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Email Address</h6>
                        <div class="d-flex align-items-center">
                            <div class="bg-light rounded-circle p-2 me-3 text-muted"><i class="fas fa-envelope"></i></div>
                            <span class="fw-bold text-dark">{{ supplier.email }}</span>
                        </div>
                    </div>

                    {# Colonne Téléphone #}
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Phone Number</h6>
                        <div class="d-flex align-items-center">
                            <div class="bg-light rounded-circle p-2 me-3 text-muted"><i class="fas fa-phone"></i></div>
                            <span class="fw-bold text-dark">{{ supplier.phone|default('Not provided') }}</span>
                        </div>
                    </div>
                </div>

                {# Section Adresse #}
                <div class="mt-5 pt-4 border-top">
                    <h6 class="text-uppercase text-muted small fw-bold mb-3">Physical Address</h6>
                    <div class="p-4 bg-light rounded-4 border border-secondary-subtle">
                        {% if supplier.address %}
                            <p class="mb-0 text-dark"><i class="fas fa-map-marker-alt me-2 text-danger"></i>{{ supplier.address }}</p>
                        {% else %}
                            <p class="mb-0 text-muted fst-italic small">No address registered.</p>
                        {% endif %}
                    </div>
                </div>

            </div>
        </div>

        {# COLONNE DROITE #}
        <div class="col-lg-4">
            
            {# 1. CARTE BLEUE (Status) #}
            <div class="card border-0 shadow-sm rounded-4 mb-4 text-white" style="background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-uppercase text-white mb-4 border-bottom border-white border-opacity-25 pb-2">
                        <i class="fas fa-check-circle me-2"></i>Partner Status
                    </h6>
                    <div class="d-flex align-items-center">
                        <div class="display-6 fw-bold me-3">Active</div>
                        <div class="small text-white opacity-75 lh-sm">
                            Ready for orders &<br>stock entries.
                        </div>
                    </div>
                </div>
            </div>

            {# 2. CARTE BLANCHE (Metadata) #}
            <div class="card border border-secondary-subtle shadow-sm rounded-4 mb-4 bg-white">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-uppercase text-muted mb-3 small">Meta Information</h6>
                    <ul class="list-unstyled mb-0 small">
                        <li class="d-flex justify-content-between">
                            <span class="text-muted">Partner ID:</span>
                            <span class="fw-bold font-monospace">SUP-{{ supplier.id }}</span>
                        </li>
                    </ul>
                </div>
            </div>

            {# 3. DANGER ZONE (Rouge) #}
            <div class="card border-0 shadow-sm rounded-4 text-white overflow-hidden" style="background: linear-gradient(135deg, #ff4d4d 0%, #c0392b 100%);">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-white text-uppercase mb-3 border-bottom border-white border-opacity-25 pb-2">
                        <i class="fas fa-skull-crossbones me-2"></i>Danger Zone
                    </h6>
                    <p class="text-white opacity-75 small mb-4">
                        Deleting this partner is permanent.
                    </p>
                    
                    {# Bouton Supprimer #}
                    <form method="post" action="{{ path('admin_supplier_delete', {'id': supplier.id}) }}" onsubmit="return confirm('Are you sure you want to delete this supplier?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ supplier.id) }}">
                        <button class="btn btn-light text-danger w-100 fw-bold rounded-pill shadow-sm">
                            <i class="fas fa-trash-alt me-2"></i> Delete Supplier
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}