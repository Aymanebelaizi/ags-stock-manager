{# templates/admin/supplier/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Suppliers List{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-5 bg-light min-vh-100">
    
    {# HEADER #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-dark">Supplier <span class="text-primary">Directory</span></h1>
            <p class="text-muted">Manage your external partners and vendors.</p>
        </div>
        {# BOUTON ADD #}
        <a href="{{ path('admin_supplier_new') }}" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
            <i class="fas fa-plus me-2"></i> Add Supplier
        </a>
    </div>

    {# CARTE DU TABLEAU AVEC BORDURE #}
    <div class="card border border-secondary-subtle shadow-sm rounded-4 overflow-hidden bg-white">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-uppercase text-muted small fw-bold">Company Name</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold">Contact Info</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold">Location</th>
                            <th class="py-3 text-end pe-4 text-uppercase text-muted small fw-bold">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for supplier in suppliers %}
                        <tr class="border-bottom border-light">
                            {# 1. NOM #}
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded p-2 me-3 text-primary">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <span class="fw-bold text-dark">{{ supplier.name }}</span>
                                </div>
                            </td>
                            
                            {# 2. CONTACT (Email & Tel) #}
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="text-dark fw-bold small"><i class="fas fa-envelope me-2 text-muted"></i>{{ supplier.email }}</span>
                                    {% if supplier.phone %}
                                        <span class="text-muted small mt-1"><i class="fas fa-phone me-2"></i>{{ supplier.phone }}</span>
                                    {% endif %}
                                </div>
                            </td>
                            
                            {# 3. ADRESSE (CORRECTION ICI : slice au lieu de u.truncate) #}
                            <td>
                                {% if supplier.address %}
                                    <span class="text-muted small">
                                        <i class="fas fa-map-marker-alt me-1"></i> 
                                        {{ supplier.address|length > 30 ? supplier.address|slice(0, 30) ~ '...' : supplier.address }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-light text-muted fw-normal">No address</span>
                                {% endif %}
                            </td>
                            
                            {# 4. ACTIONS (View, Edit, Delete) #}
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    
                                    {# VIEW (Å’il) #}
                                    <a href="{{ path('admin_supplier_show', {'id': supplier.id}) }}" class="btn btn-sm btn-light text-muted border rounded-circle" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    {# EDIT (Crayon) #}
                                    <a href="{{ path('admin_supplier_edit', {'id': supplier.id}) }}" class="btn btn-sm btn-light text-primary border rounded-circle" title="Edit">
                                        <i class="fas fa-pen"></i>
                                    </a>

                                    {# DELETE (Corbeille) #}
                                    <form method="post" action="{{ path('admin_supplier_delete', {'id': supplier.id}) }}" onsubmit="return confirm('Are you sure you want to delete this supplier?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ supplier.id) }}">
                                        <button class="btn btn-sm btn-light text-danger border rounded-circle" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>

                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="fas fa-truck-loading fa-3x mb-3 text-light"></i>
                                <p>No suppliers registered yet.</p>
                            </td>
                        </tr>
                    {% endfor %} {# <--- C'EST CETTE LIGNE QUI MANQUAIT SUREMENT #}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}