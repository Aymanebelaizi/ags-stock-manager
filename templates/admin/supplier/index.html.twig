{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="fw-bold h2 mb-1"><i class="fas fa-truck me-2 text-primary"></i>Suppliers Directory</h1>
            <p class="text-muted small">Gestion des partenaires - EMSI 2026</p>
        </div>
        <a href="{{ path('admin_supplier_new') }}" class="btn btn-primary px-4 py-2 fw-bold shadow-sm rounded-3">+ Ajouter un fournisseur</a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <table class="table align-middle mb-0">
            <thead class="bg-light text-muted small text-uppercase">
                <tr>
                    <th class="ps-4 py-3">Supplier Name</th>
                    <th>Email Address</th>
                    <th>Phone Number</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for s in suppliers %}
                <tr>
                    <td class="ps-4">
                        <div class="fw-bold text-dark">{{ s.name }}</div>
                        <small class="text-muted">Partner ID: #{{ s.id }}</small>
                    </td>
                    <td class="small text-muted">{{ s.email }}</td>
                    <td class="small text-muted">{{ s.phone }}</td>
                    <td class="text-end pe-4">
                        <div class="btn-group shadow-sm">
                            <a href="{{ path('admin_supplier_edit', {id: s.id}) }}" class="btn btn-sm btn-white border"><i class="fas fa-edit text-muted"></i></a>
                            <a href="{{ path('admin_supplier_delete', {id: s.id}) }}" class="btn btn-sm btn-white border text-danger" onclick="return confirm('Supprimer ce partenaire ?')"><i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}