{% extends 'base.html.twig' %}

{% block title %}Gestion des Catégories{% endblock %}

{% block body %}
<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark d-flex align-items-center gap-2 mb-1">
                <span class="bg-primary bg-opacity-10 text-primary p-2 rounded-3">
                    <i class="fas fa-tags"></i>
                </span>
                Gestion des Catégories
            </h2>
            <p class="text-muted small mb-0">Classification du matériel et fournitures EMSI</p>
        </div>
        <a href="{{ path('admin_category_new') }}" class="btn btn-primary rounded-3 px-4 fw-semibold shadow-sm">
            <i class="fas fa-plus me-2"></i> Nouvelle Catégorie
        </a>
    </div>

    <div class="card border border-secondary-subtle shadow-sm rounded-4 bg-white">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead style="background:#f8fafc;">
                        <tr class="text-uppercase text-muted small fw-bold">
                            <th class="ps-4 py-3" style="width: 80px;">ID</th>
                            <th class="py-3">Nom</th>
                            <th class="py-3">Description</th>
                            <th class="py-3 text-center">Produits liés</th>
                            <th class="py-3 text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr class="border-bottom border-light">
                            <td class="ps-4 text-muted fw-bold">#{{ category.id }}</td>
                            <td><div class="fw-bold text-dark">{{ category.name }}</div></td>
                            <td class="text-muted small">{{ category.description|default('—') }}</td>
                            <td class="text-center">
                                <span class="badge rounded-pill px-3 py-1" style="background:#eef2ff; color:#4f46e5; border: 1px solid #c7d2fe;">
                                    {{ category.products|length }} articles
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-1">
                                    <a href="{{ path('admin_category_show', {id: category.id}) }}" class="btn btn-sm btn-light border border-secondary-subtle rounded-2 text-primary shadow-sm"><i class="fas fa-eye"></i></a>
                                    <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-sm btn-light border border-secondary-subtle rounded-2 text-muted shadow-sm"><i class="fas fa-pen"></i></a>
                                    <form method="post" action="{{ path('admin_category_delete', {id: category.id}) }}" onsubmit="return confirm('Supprimer ?');" class="d-inline">
                                        <button class="btn btn-sm btn-light border border-secondary-subtle rounded-2 text-danger shadow-sm"><i class="fas fa-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}