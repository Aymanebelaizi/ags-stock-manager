{% extends 'base.html.twig' %}

{% block title %}Stock Categories | AGS.Pro{% endblock %}

{% block body %}
    {# En-tête avec bouton d'ajout (Style AGS.Pro) #}
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="fw-bold h2 mb-1"><i class="fas fa-tags me-2 text-primary"></i>Stock Categories</h1>
            <p class="text-muted small">Manage and classify your inventory items for EMSI</p>
        </div>
        <a href="{{ path('admin_category_new') }}" class="btn btn-primary px-4 py-2 fw-bold shadow-sm rounded-3">
            <i class="fas me-2"></i>+ Ajouter Catégorie
        </a>
    </div>

    {# Tableau des Catégories #}
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <table class="table align-middle mb-0">
            <thead class="bg-light text-muted small text-uppercase">
                <tr>
                    <th class="ps-4 py-3">ID</th>
                    <th>Category Name</th>
                    <th>Description</th>
                    <th>Linked Products</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for cat in categories %}
                <tr>
                    <td class="ps-4 text-muted">#{{ cat.id }}</td>
                    <td>
                        <div class="fw-bold text-dark">{{ cat.name }}</div>
                    </td>
                    <td class="small text-muted" style="max-width: 300px;">
                        {{ cat.description|default('No description provided.') }}
                    </td>
                    <td>
                        {# Badge montrant le nombre de produits liés #}
                        <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-10 px-3 rounded-pill">
                            <i class="fas fa-box-open me-1"></i> {{ cat.products|length }} items
                        </span>
                    </td>
                    
                    <td class="text-end pe-4">
                        <div class="btn-group shadow-sm rounded-3">
                            {# Bouton Voir #}
                            <a href="{{ path('admin_category_show', {id: cat.id}) }}" class="btn btn-sm btn-white border" title="Show details">
                                <i class="fas fa-eye text-primary"></i>
                            </a>
                            
                            {# Bouton Éditer #}
                            <a href="{{ path('admin_category_edit', {id: cat.id}) }}" class="btn btn-sm btn-white border" title="Edit category">
                                <i class="fas fa-edit text-muted"></i>
                            </a>

                            {# Bouton Supprimer avec message de vérification #}
                            <a href="{{ path('admin_category_delete', {id: cat.id}) }}" 
                               class="btn btn-sm btn-white border text-danger" 
                               title="Delete" 
                               onclick="return confirm('Are you sure? You can only delete categories with 0 products.')">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center py-5">
                        <i class="fas fa-folder-open fa-3x text-light mb-3"></i>
                        <p class="text-muted mb-0">No categories found in the system.</p>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}