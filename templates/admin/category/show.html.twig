{% extends 'base.html.twig' %}

{% block title %}Détails Catégorie | AGS.Pro{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Correction de la route : admin_category_index au lieu de app_category_index #}
    <div class="mb-3">
        <a href="{{ path('admin_category_index') }}" class="text-muted text-decoration-none small">
            <i class="fas fa-arrow-left me-1"></i> Back to Categories
        </a>
    </div>

    <div class="mb-4">
        <h2 class="fw-bold text-dark mb-1">Category: {{ category.name }}</h2>
        <p class="text-muted small">Viewing details and linked products for this classification.</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 p-4 bg-white">
                <div class="mb-4">
                    <label class="form-label fw-bold small text-muted text-uppercase">Description</label>
                    <p class="bg-light p-3 rounded-3">{{ category.description|default('No description provided.') }}</p>
                </div>

                <h6 class="fw-bold text-dark mb-3">Linked Products ({{ category.products|length }})</h6>
                <div class="list-group list-group-flush">
                    {% for product in category.products %}
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            <div>
                                <div class="fw-bold">{{ product.name }}</div>
                                <small class="text-muted">Ref: {{ product.reference }}</small>
                            </div>
                            <span class="badge bg-light text-dark border px-3">{{ product.quantity }} in stock</span>
                        </div>
                    {% else %}
                        <div class="text-muted small py-3">No products are currently linked to this category.</div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 mb-3 bg-white text-center">
                <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-primary w-100 fw-bold rounded-3 mb-2">
                    <i class="fas fa-edit me-2"></i> Edit Category
                </a>
                {# Formulaire de suppression sécurisé #}
                <a href="{{ path('admin_category_delete', {id: category.id}) }}" 
                   class="btn btn-outline-danger w-100 fw-bold rounded-3"
                   onclick="return confirm('Are you sure you want to delete this category?')">
                    <i class="fas fa-trash-alt me-2"></i> Delete
                </a>
            </div>
            
            <div class="card border-0 shadow-sm rounded-4 p-4" style="background-color: #f0f7ff;">
                <h6 class="fw-bold text-primary mb-3"><i class="fas fa-info-circle me-2"></i> Category Info</h6>
                <p class="small text-muted mb-0">
                    This category ID is <strong>#{{ category.id }}</strong>. It was created to help organize your EMSI inventory.
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}