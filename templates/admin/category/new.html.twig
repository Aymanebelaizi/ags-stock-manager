{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="mb-3">
        <a href="{{ path('admin_category_index') }}" class="text-muted text-decoration-none small">
            <i class="fas fa-arrow-left me-1"></i> Back to Categories
        </a>
    </div>

    <div class="mb-4">
        <h2 class="fw-bold text-dark mb-1">Register New Category</h2>
        <p class="text-muted small">Create a new group to organize your inventory items.</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 p-5 bg-white">
                <form method="POST">
                    <div class="row g-4">
                        <div class="col-12">
                            <label class="form-label fw-bold small text-muted text-uppercase">Category Name</label>
                            <input type="text" name="name" class="form-control border-0 bg-light rounded-3 py-3" placeholder="Ex: Networking Gears" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold small text-muted text-uppercase">Description</label>
                            <textarea name="description" class="form-control border-0 bg-light rounded-3 py-3" rows="3" placeholder="Describe the type of products in this category..."></textarea>
                        </div>
                        <div class="col-12 text-end pt-3">
                            <button type="submit" class="btn btn-primary px-5 py-2 fw-bold rounded-3">Save Category</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        {# Bloc Quick Tip identique Ã  image_f492cb.png #}
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 p-4" style="background-color: #f0f7ff;">
                <h6 class="fw-bold text-primary mb-3"><i class="fas fa-lightbulb me-2"></i> Quick Tip</h6>
                <p class="small text-muted mb-0">
                    Categories help you filter products in the <strong>Dashboard</strong> charts. Make sure to use clear names for better reporting.
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}