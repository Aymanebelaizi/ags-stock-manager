{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="fw-bold h2 text-dark">Gestion des Demandes d'Achat</h1>
        <a href="{{ path('admin_purchase_new') }}" class="btn btn-primary fw-bold shadow-sm px-4 rounded-3">
            <i class="fas fa-plus me-2"></i> Nouvelle Demande
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <table class="table align-middle mb-0">
            <thead class="bg-light text-muted small text-uppercase">
                <tr>
                    <th class="ps-4 py-3">Produit</th>
                    <th>Quantité</th>
                    <th>Statut</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for pr in purchase_requests %}
                <tr class="border-bottom">
                    <td class="ps-4">
                        <div class="fw-bold text-dark">{{ pr.product.name }}</div>
                        <div class="small text-muted">{{ pr.product.reference }}</div>
                    </td>
                    <td><span class="badge bg-light text-dark border px-3 py-2">{{ pr.quantity }} unités</span></td>
                    <td>
                        <span class="badge px-3 py-2 rounded-pill 
                            {{ pr.status == 'Validée' ? 'bg-success' : (pr.status == 'Refusée' ? 'bg-danger' : 'bg-warning text-dark') }}">
                            {{ pr.status }}
                        </span>
                    </td>
                    <td class="text-end pe-4">
                        <div class="btn-group border rounded-pill overflow-hidden shadow-sm bg-white">
                            {# ACTIONS VISIBLES PAR TOUS (Manager & Admin) #}
                            <a href="{{ path('admin_purchase_show', {id: pr.id}) }}" class="btn btn-sm btn-white border-end px-3" title="Voir">
                                <i class="fas fa-eye text-primary"></i>
                            </a>
                            <a href="{{ path('admin_purchase_edit', {id: pr.id}) }}" class="btn btn-sm btn-white border-end px-3" title="Éditer">
                                <i class="fas fa-edit text-muted"></i>
                            </a>
                            <a href="{{ path('admin_purchase_delete', {id: pr.id}) }}" class="btn btn-sm btn-white border-end px-3 text-danger" onclick="return confirm('Supprimer ?')">
                                <i class="fas fa-trash-alt"></i>
                            </a>

                            {# ACTIONS RÉSERVÉES À L'ADMINISTRATEUR (Valider / Refuser) #}
                            {% if is_granted('ROLE_ADMIN') and pr.status == 'pending' %}
                                <a href="{{ path('admin_purchase_approve', {id: pr.id}) }}" class="btn btn-sm btn-white border-end px-3" title="Valider">
                                    <i class="fas fa-check text-success"></i>
                                </a>
                                <a href="{{ path('admin_purchase_reject', {id: pr.id}) }}" class="btn btn-sm btn-white px-3" title="Refuser">
                                    <i class="fas fa-times text-danger"></i>
                                </a>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}