{% extends 'base.html.twig' %}

{% block title %}Gestion des Demandes d'Achat{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-4 bg-light min-vh-100">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark d-flex align-items-center gap-2 mb-1">
                <span class="bg-primary bg-opacity-10 text-primary p-2 rounded-3">
                    <i class="fas fa-shopping-cart"></i>
                </span>
                Gestion des Demandes d'Achat
            </h2>
            <p class="text-muted small mb-0">Suivi des besoins en matériel EMSI - Données synchronisées</p>
        </div>

        {# ✅ Admin OU Manager peuvent créer une demande #}
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
            <a href="{{ path('admin_purchase_new') }}" class="btn btn-primary rounded-3 px-4 fw-semibold shadow-sm">
                <i class="fas fa-plus me-2"></i> Nouvelle Demande
            </a>
        {% endif %}
    </div>

    <div class="card border border-secondary-subtle shadow-sm rounded-4 bg-white">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead style="background:#f8fafc;">
                        <tr class="text-uppercase text-muted small fw-semibold">
                            <th class="ps-4 py-3">ID</th>
                            <th class="py-3">Produit</th>
                            <th class="py-3 text-center">Quantité</th>
                            <th class="py-3 text-center">Statut</th>
                            <th class="py-3">Justification</th>
                            
                            <th class="py-3 text-end pe-4">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                    {% for request in purchase_requests %}
                        {% set raw = request.status|default('')|trim|lower %}

                        {% if raw in ['validée','validee','approved'] %}
                            {% set statusKey = 'approved' %}
                        {% elseif raw in ['refusée','refusee','rejected'] %}
                            {% set statusKey = 'rejected' %}
                        {% else %}
                            {% set statusKey = 'pending' %}
                        {% endif %}

                        <tr class="border-bottom border-light">
                            <td class="ps-4 text-muted fw-semibold">#{{ request.id }}</td>

                            <td>
                                <div class="fw-semibold text-dark">{{ request.product.name }}</div>
                                <div class="text-muted small">{{ request.product.reference }}</div>
                            </td>

                            <td class="text-center">
                                <span class="fw-semibold">{{ request.quantity }}</span>
                            </td>

                            <td class="text-center">
                                {% if statusKey == 'approved' %}
                                    <span class="badge rounded-pill px-3 py-1"
                                          style="background:#e8f7ef;color:#1f9254;border:1px solid #1f9254;">
                                        Validée
                                    </span>
                                {% elseif statusKey == 'rejected' %}
                                    <span class="badge rounded-pill px-3 py-1"
                                          style="background:#fdecea;color:#d32f2f;border:1px solid #d32f2f;">
                                        Refusée
                                    </span>
                                {% else %}
                                    <span class="badge rounded-pill px-3 py-1"
                                          style="background:#fff4e5;color:#f57c00;border:1px solid #f57c00;">
                                        En attente
                                    </span>
                                {% endif %}
                            </td>

                            <td class="text-muted small">
                                {% if request.justification %}
                                    {{ request.justification|length > 60
                                        ? request.justification|slice(0, 60) ~ '...'
                                        : request.justification
                                    }}
                                {% else %}
                                    —
                                {% endif %}
                            </td>

                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-1">

                                    {# ✅ Voir : tout le monde (admin/manager) #}
                                    <a href="{{ path('admin_purchase_show', {id: request.id}) }}"
                                       class="btn btn-sm btn-light border border-secondary-subtle rounded-2 text-primary shadow-sm"
                                       title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    {# ✅ Actions avancées : ADMIN SEULEMENT #}
                                    {% if is_granted('ROLE_ADMIN') %}

                                        {% if statusKey == 'pending' %}
                                            <form method="post"
                                                  action="{{ path('admin_purchase_approve', {id: request.id}) }}"
                                                  class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ request.id) }}">
                                                <button type="submit"
                                                        class="btn btn-sm btn-light border border-secondary-subtle rounded-2 text-success shadow-sm"
                                                        title="Valider"
                                                        onclick="return confirm('Valider cette demande ?');">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>

                                            <form method="post"
                                                  action="{{ path('admin_purchase_reject', {id: request.id}) }}"
                                                  class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ request.id) }}">
                                                <button type="submit"
                                                        class="btn btn-sm btn-light border border-secondary-subtle rounded-2 text-danger shadow-sm"
                                                        title="Refuser"
                                                        onclick="return confirm('Refuser cette demande ?');">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        {% endif %}

                                        <a href="{{ path('admin_purchase_edit', {id: request.id}) }}"
                                           class="btn btn-sm btn-light border border-secondary-subtle rounded-2 text-muted shadow-sm"
                                           title="Modifier">
                                            <i class="fas fa-pen"></i>
                                        </a>

                                        <form method="post"
                                              action="{{ path('admin_purchase_delete', {id: request.id}) }}"
                                              onsubmit="return confirm('Supprimer cette demande ?');"
                                              class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ request.id) }}">
                                            <button type="submit"
                                                    class="btn btn-sm btn-light border border-secondary-subtle rounded-2 text-danger shadow-sm"
                                                    title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>

                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-5">
                                Aucune demande d’achat trouvée.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</div>
{% endblock %}
