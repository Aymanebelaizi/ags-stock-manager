{% extends 'base.html.twig' %}

{% block title %}Edit Request | AGS.Pro{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="mb-3">
        <a href="{{ path('admin_purchase_index') }}" class="text-muted text-decoration-none small">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="mb-4">
        <h2 class="fw-bold text-dark mb-1">Edit Purchase Request #{{ pr.id }}</h2>
        <p class="text-muted small">Update the details of this existing material request.</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 p-4 bg-white">
                <form action="{{ path('admin_purchase_edit', {id: pr.id}) }}" method="POST">
                    <div class="row g-4">
                        <div class="col-md-8">
                            <label class="form-label fw-bold small text-muted text-uppercase">Product</label>
                            <select name="product_id" class="form-select border-0 bg-light rounded-3 py-3" required>
                                {% for p in products %}
                                    <option value="{{ p.id }}" {{ p.id == pr.product.id ? 'selected' : '' }}>{{ p.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold small text-muted text-uppercase">Quantity</label>
                            <input type="number" name="quantity" class="form-control border-0 bg-light rounded-3 py-3" value="{{ pr.quantity }}" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold small text-muted text-uppercase">Justification</label>
                            <textarea name="justification" class="form-control border-0 bg-light rounded-3 py-3" rows="4" required>{{ pr.justification }}</textarea>
                        </div>
                        <div class="col-12 text-end">
                            <button type="submit" class="btn btn-primary px-5 py-2 fw-bold rounded-3 shadow-sm">
                                Save Changes
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        {# Bloc Quick Tip #}
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 p-4" style="background-color: #fff9f0;">
                <h6 class="fw-bold text-warning mb-3">
                    <i class="fas fa-exclamation-triangle me-2"></i> Important
                </h6>
                <p class="small text-muted mb-0">
                    Editing a request that has already been <strong>"Approved"</strong> may cause discrepancies in stock history. It is recommended to only edit pending requests.
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}