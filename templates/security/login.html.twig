{# templates/security/login.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Connexion - AGS STOCK</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body, html { margin: 0; padding: 0; height: 100%; font-family: 'Poppins', sans-serif; overflow: hidden; }
        .wrapper { display: flex; height: 100vh; width: 100%; }
        .left-side { flex: 1.2; background: #2c3e50 url("{{ asset('images/warehouse.jpg') }}") center/cover no-repeat; }
        .right-side { flex: 1; background: #1a1a1a url("{{ asset('images/circuit-bg.jpg') }}") center/cover no-repeat; display: flex; justify-content: center; align-items: center; }
        .glass-card { background: rgba(255, 255, 255, 0.12); backdrop-filter: blur(20px); border: 2px solid rgba(255, 255, 255, 0.4); border-radius: 25px; padding: 40px; width: 85%; max-width: 420px; color: white; box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2); }
        .input-row { background: rgba(255, 255, 255, 0.2); border-radius: 50px; padding: 12px 20px; margin-bottom: 20px; display: flex; align-items: center; }
        .input-row input { background: transparent; border: none; color: white; outline: none; width: 100%; font-family: 'Poppins'; }
        .btn-login { width: 100%; padding: 14px; border-radius: 50px; border: none; background: #1a73e8; color: white; font-weight: 600; cursor: pointer; transition: 0.3s; }
        .btn-login:hover { background: #1557b0; transform: translateY(-2px); }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="left-side"></div>
        <div class="right-side">
            <form action="{{ path('app_login') }}" method="post" class="glass-card">
                {% if error %}
                    <div style="background:rgba(220,53,69,0.6); padding:10px; border-radius:10px; margin-bottom:15px; font-size:12px; border: 1px solid #dc3545;">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <h2 class="fw-bold mb-1">Bienvenue!</h2>
                <p class="subtitle" style="font-size: 14px; margin-bottom: 35px; opacity: 0.9;">Gestion de Stock AGS</p>

                <div class="input-row">
                    <i class="fas fa-envelope" style="margin-right:15px;"></i>
                    <input type="email" name="email" value="{{ last_username }}" placeholder="Email Professionnel" required autofocus>
                </div>
                <div class="input-row">
                    <i class="fas fa-lock" style="margin-right:15px;"></i>
                    <input type="password" name="password" placeholder="Mot de Passe" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn-login" type="submit">Connexion</button>
            </form>
        </div>
    </div>
</body>
</html>