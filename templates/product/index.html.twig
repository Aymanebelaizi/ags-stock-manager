{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-gray-800">üì¶ Catalogue Produits</h1>
    {% if is_granted('ROLE_MANAGER') %}
        <a href="{{ path('app_product_new') }}" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Nouveau Produit
        </a>
    {% endif %}
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>R√©f√©rence</th>
                        <th>Nom</th>
                        <th>Prix Vente</th>
                        <th>Stock</th>
                        <th>Cat√©gorie</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td><span class="badge bg-secondary">{{ product.reference }}</span></td>
                        <td class="fw-bold">{{ product.name }}</td>
                        <td>{{ product.salesPrice }} MAD</td>
                        
                        {# Gestion couleur du stock #}
                        <td>
                            {% if product.quantity <= product.alertThreshold %}
                                <span class="badge bg-danger animate__animated animate__pulse infinite">
                                    {{ product.quantity }} (Alerte)
                                </span>
                            {% else %}
                                <span class="badge bg-success">{{ product.quantity }}</span>
                            {% endif %}
                        </td>

                        <td>{{ product.category ? product.category.name : '-' }}</td>
                        
                        <td class="text-center">
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm btn-info text-white" title="Voir">
                                <i class="fas fa-eye"></i>
                            </a>
                            {% if is_granted('ROLE_MANAGER') %}
                                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">Aucun produit trouv√©.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}